<Window x:Class="Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="PCAP parcer" Height="720" Width="1280"
        ResizeMode="CanMinimize"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        >
    <Grid>
        <!-- PCAP parced data table -->
        <DataGrid x:Name="dgTable" Margin="10,346,10,0" VerticalAlignment="Top" Height="333"/>
        <!-- File Dialog controlls -->
        <Button x:Name="btnOpenFile" Click="BtnOpenFile_OnClick" Content="Open file" Width="60" Margin="0,10,915,0" HorizontalAlignment="Right" Height="20" VerticalAlignment="Top"/>
        <TextBox Name="txtEditor" Margin="10,10,0,0" IsReadOnly="True" VerticalAlignment="Top" HorizontalAlignment="Left" Width="275" Height="20"/>
        <Button x:Name="btnParce" Content="Parce" HorizontalAlignment="Left" Margin="10,321,0,0" VerticalAlignment="Top" Width="60" Height="20" Click="BtnParce_OnClick"/>
    </Grid>
</Window>
